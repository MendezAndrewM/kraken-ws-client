{
    "env": {
			"es2021": true,
			"jest": true,
			"node": true,
			"browser": false
    },
    "extends": [
        "eslint:recommended"
    ],
		"parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaFeatures": {
            "classes": true,
						"impliedStrict": true
        },
        "ecmaVersion": 12,
        "sourceType": "script"
    },
    "plugins": [
			"@babel"
		],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": [
            "warn",
            { "allow": ["warn", "error"]}
        ],
        "no-extra-semi":"error",
        "eqeqeq": "error",
        "no-trailing-spaces": ["error", {
            "ignoreComments": true
        }],
        "no-multiple-empty-lines": ["error", {
            "max": 1,
            "maxEOF": 0,
            "maxBOF": 0
        }],
				"no-useless-catch": [0],
        "no-irregular-whitespace": ["error", {
            "skipStrings": true,
            "skipComments": true,
            "skipRegExps": true,
            "skipTemplates": true
        }],
				"object-curly-spacing": ["error", "always"]
    },
    "settings": {}
}
